{
  "collectCoverage": true,
  "moduleFileExtensions": ["js", "ts"],
  "testMatch": ["**/__test__/**/*.+(ts|js)", "**/?(*.)+(spec|test).+(ts|js)"],
  "transform": {
    "^.+\\.(ts)$": [
      "ts-jest",
      {
        "useESM": true
      }
    ]
  },
  "extensionsToTreatAsEsm": [".ts"],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  }
}
